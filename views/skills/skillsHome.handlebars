<h1 style="color: rgb(255, 255, 255); background-color: #d28200;">{{h1}}</h1>
<div class="container">
    <nav class="navbar navbar-expand-lg bg-body-tertiary bg-dark">
        <div class="container-fluid">
            <img src="/public/images/aboutUs.png" alt="Logo" width="30" height="30"
                class="d-inline-block align-text-top">
            <a class="navbar-brand mb-0" href=""> &nbsp; Better Interview Book</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        <a class="nav-link" href="/skills">Skills Article</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/skills/search/api" target="_blank">API Search</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/skills/create/{{Id}}" target="_blank">Create New Post</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <br>
    <div style="margin-bottom: 0.5em;">
        <p style="display: inline; font-style: italic;">{{quotes.author}} -- {{quotes.quote}}</p>
    </div>
    <div class="input-group">
        <label class="input-group-text bg-primary-subtle border border-primary-subtle rounded-2"
            for="searchbox">Search</label>
        <input class='input' type="search" id="searchbox" placeholder="Search tags.." onkeyup="searchTag()">
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4" style="margin: auto;">
        {{#each skills}}
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title " style="width: 10ch; overflow: hidden; white-space: nowrap;">{{title}}</h5>
                    <p class="card-text"
                        style="width: 30ch; overflow: hidden; white-space: nowrap; text-overflow: ellipsis;">
                        {{article}}</p>
                    <button id="whole-article-button" type="button" class="btn btn-danger" data-bs-toggle="popover" data-bs-title="{{title}}"
                        data-bs-content="{{article}}" data-bs-popover-max-width="100%"
                        style="margin-bottom: auto;">Click
                        here to see all article</button>
                    <br><br>
                    {{#if videoUrl}}
                    <div class="ratio ratio-16x9">
                        <iframe src="{{videoUrl}}" allowfullscreen>
                        </iframe>
                    </div>
                    <a href="{{videoUrl}}" target="_blank">Web. Link</a>
                    {{/if}}
                    <br>
                    {{#each tags}}
                    <a class="tag">#{{this}}</a>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<script>
    const popoverTriggerList = document.querySelectorAll('[data-bs-toggle="popover"]')
    const popoverList = [...popoverTriggerList].map(popoverTriggerEl => new bootstrap.Popover(popoverTriggerEl))
</script>
<script src="/public/js/searchBox.js"></script>