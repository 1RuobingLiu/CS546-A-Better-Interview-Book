<div class="main-jobs-main">

  

    <h1> {{companyName}} </h1>
    
    <span id="errorDisplay" style="color: red"> {{error}} </span>

    {{#each jobs}}

        <form action=/company/jobUpdate/{{{this._id}}} method="get">

            <div class="main-jobs">

                <div class="jobId">
                    Job Id : {{{ this._id }}}
                </div>
                <div id="JobTitle">
                    Job Title : {{{ this.jobTitle }}}
                </div>

                <div id="skills">
                    Skills : {{{ this.skills }}}
                </div>

                <div id="salary">
                    Salary : {{{ this.salary }}}
                </div>

                <div id="location">
                    Location : {{{ this.location }}}
                </div>

                <div id="description">
                    Description : {{{ this.description }}}
                </div>

            <input type="submit" value="Edit Details or Delete">
            <a href=/company/jobSingleDisplay/:{{{this._id}}}> View Details </a>
            </div>
            
        </form>
    
    {{/each}}

</div>

