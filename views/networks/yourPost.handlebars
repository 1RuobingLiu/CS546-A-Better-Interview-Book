<h1>{{h1}}</h1>
<div class="container">
    <nav class="navbar navbar-expand-lg bg-body-tertiary bg-dark">
        <div class="container-fluid">
            <img src="/public/static/images/download.png" alt="Logo" width="50" height="50"
                class="d-inline-block align-text-top">
            <a class="navbar-brand mb-0" href="">Better Interview Book</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/network/post/{{id}}">Post</a>
                        {{!--/network/post/{{id}}--}}
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            Your Follower
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="">Get Your Connections Info.</a></li>
                            {{!--
                            /network/follower/{{id}} --}}
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="">Create New Relation</a>
                                {{!--/network/follower/new/{{id}} --}}
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="">Remove Your Relation</a>
                                {{!--
                                /network/follower/remove/{{id}} --}}
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <br>

    <div class="card" style="width: 50%;">
        <div class="card-body">
            <h5 class="card-title">{{post.content}}</h5>
            <h6 class="card-subtitle mb-2 text-body-secondary">{{fname}},&nbsp;{{lname}}</h6>
            <p class="card-text">{{post.comments}}</p>
            <p class="card-text">{{post.likes}}</p>
        </div>
    </div>
</div>