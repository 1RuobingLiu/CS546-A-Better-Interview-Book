<h1>{{h1}}</h1>
<div class="container">
    <nav class="navbar navbar-expand-lg bg-body-tertiary bg-dark">
        <div class="container-fluid">
            <img src="/public/images/aboutUs.png" alt="Logo" width="30" height="30"
                class="d-inline-block align-text-top">
            <a class="navbar-brand mb-0" href=""> &nbsp; Better Interview Book</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/network/post/{{userId}}">Post</a>
                        {{!--/network/post/{{id}}--}}
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            Your Follower
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/network/follower/{{userId}}">Get & Remove Your
                                    Connections
                                    Info.</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="/network/follower/{{userId}}/create">Create New
                                    Connections</a>
                            </li>

                        </ul>
                    </li>
                    <li class="nav-item">
                        <form style="display: inline" action="/network/post/{{userId}}/new" method="get">
                            <button class="nav-link btn btn-outline-primary"
                                style="--bs-btn-padding-y: .01rem; --bs-btn-padding-x: .2rem; --bs-btn-font-size: .4rem;">
                                Create New Post
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <br>

    {{!--Your Post --}}
    <div class="accordion" id="your-post">
        <div class="accordion-item">
            <p class="alert alert-primary fs-4 font-monospace text-center">
                Your Post
            </p>
        </div>
        {{#if userPost.length}}
        {{#each userPost}}
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button" data-bs-toggle="collapse" data-bs-target="#{{_id}}"
                    aria-expanded="true" aria-controls="{{_id}}">
                    {{content}}
                </button>
            </h2>

            <div id="{{_id}}" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <a class="link-dark">Commits: {{comments.length}}&nbsp; Likes: {{likes.length}}</a>&nbsp;
                    {{!-- Check comments and leave comments --}}
                    <a class="btn btn-primary" href="/network/post/{{../authorId}}/postId/{{_id}}" role="button"
                        target="_blank">
                        Leave comments
                    </a>
                    {{!-- Edit comments --}}
                    <a class="btn btn-primary" href="/network/post/{{../authorId}}/postId/{{_id}}/edit" role="button"
                        target="_blank">
                        Edit this post
                    </a>
                    <a class="btn btn-primary" href="/network/post/{{../authorId}}/postId/{{_id}}/remove" role="button"
                        target="_blank">
                        Remove this post
                    </a>
                </div>
            </div>

        </div>
        {{/each}}
        {{/if}}
    </div>

    <br>

    {{!-- Followers Post --}}
    <div class="accordion" id="follower-post">
        <div class="accordion-item">
            <p class="alert alert-primary fs-4 font-monospace text-center">
                Follower Post
            </p>
        </div>
        {{#if followerPost.length}}
        {{#each followerPost}}
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button" data-bs-toggle="collapse" data-bs-target="#{{_id}}"
                    aria-expanded="true" aria-controls="{{_id}}">
                    {{content}}
                </button>
            </h2>
            <div id="{{_id}}" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <a class="link-dark">Commits: {{comments.length}}&nbsp; Likes: {{likes.length}}</a>&nbsp;
                    <a class="btn btn-primary" href="/network/post/{{../userId}}/followerId/{{userId}}/postId/{{_id}}"
                        role="button">
                        Leave comments
                    </a>
                </div>
            </div>
        </div>
        {{/each}}
        {{/if}}
    </div>
</div>