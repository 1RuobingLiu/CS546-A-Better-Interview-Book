<link rel="stylesheet" href="/css/group-details.css" />

<div class="container">
  <h1>Edit Profile</h1>
  <div>
    <a href="javascript:history.back();">Back to Search Results</a>

    <form
      action="/profile/{{_id}}/updateprofile"
      method="POST"
      enctype="multipart/form-data"
    >
      <!-- First Name -->
      <div class="form-group">
        <label for="fname">First Name</label>
        <input
          type="text"
          name="fname"
          id="fname"
          class="form-control"
          value="{{fname}}"
        />
      </div>

      <!-- Last Name -->
      <div class="form-group">
        <label for="lname">Last Name</label>
        <input
          type="text"
          name="lname"
          id="lname"
          class="form-control"
          value="{{lname}}"
        />
      </div>

      <!-- Gender -->
      <div class="form-group">
        <label for="gender">Gender</label>
        <select name="gender" class="form-control">
          <option value="Male">Male</option>
          <option value="Female">Female</option>
          <option value="Prefer not to say">Prefer not to say</option>
        </select>
      </div>

      <!-- Header Description -->
      <div class="form-group">
        <label for="headerDescription">Header Description</label>
        <textarea
          name="headerDescription"
          id="headerDescription"
          class="form-control"
        >{{headerDescription}}</textarea>
      </div>

      <!-- github -->
      <div class="form-group">
        <label for="gitHubUserName">GitHub UserName</label>
        <input
          type="text"
          name="gitHubUserName"
          id="gitHubUserName"
          class="form-control"
          value="{{gitHubUserName}}"
        />
      </div>

      <!-- About Me -->
      <div class="form-group">
        <label for="aboutMe">About Me</label>
        <textarea
          name="aboutMe"
          id="aboutMe"
          class="form-control"
        >{{aboutMe}}</textarea>
      </div>

      <!-- Location State -->
      <div class="form-group">
        <label for="locationState">Location State</label>
        <input
          type="text"
          name="locationState"
          id="locationState"
          class="form-control"
          value="{{locationState}}"
        />
      </div>

      <!-- University -->
      <div class="form-group">
        <label for="university">University</label>
        <input
          type="text"
          name="university"
          id="university"
          class="form-control"
          value="{{university}}"
        />
      </div>

      <!-- College Major -->
      <div class="form-group">
        <label for="collegeMajor">College Major</label>
        <input
          type="text"
          name="collegeMajor"
          id="collegeMajor"
          class="form-control"
          value="{{collegeMajor}}"
        />
      </div>

      <input type="submit" value="Submit" class="btn btn-primary btn-block" />
    </form>
  </div>
</div>