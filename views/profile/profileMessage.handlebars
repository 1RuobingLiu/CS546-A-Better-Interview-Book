<link rel="stylesheet" href="/public/css/group-details.css" />

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Simple Messaging Page</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-5">
      <h1 class="text-center">Messaging</h1>
      <div class="row mt-4">
        <div class="col-md-4">
          <h3>Conversations</h3>
          <ul class="list-group">
            {{#each conversations}}
              <li class="list-group-item">{{this}}</li>
            {{/each}}
          </ul>
        </div>
        <div class="col-md-8">
          <h3>Messages</h3>
          <div
            class="messages border p-3"
            style="height: 300px; overflow-y: scroll;"
          >
            {{#each messages}}
              <div class="message">
                <h3>{{subject}}</h3>
                <p>{{message}}</p>
              </div>
            {{/each}}

          </div>
          <form
            action="/profile/{{_id}}/messaging"
            method="POST"
            id="send-message"
          >
            <label for="subjectInput">subjectLine</label>
            <input id="subjectInput" type="text" name="subjectInput" />
            <label for="messageInput">Message</label>
            <input id="messageInput" type="text" name="messageInput" />
            <label for="userInput">Send Message To:</label>
            <select name="connection" id="userConnections">
              {{#each userFullNames}}
                <option value="{{this.id}}">{{this.fullName}}</option>
              {{/each}}
            </select>
            <input type="submit" value="Send" />
          </form>
          <p>Last submitted subject {{subjectInput}}</p>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    ></script>
    <a href="/profile/{{id}}">Back to Profile</a>
  </body>
</html>